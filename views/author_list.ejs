<%- include('./partials/head') %>

<div class="container-fluid">
  <div class="row">
      <div class="col-sm-2">
        <%# Sidebar menu %>
        <%- include('./partials/sidebar') %>

      </div>

      <div class="col-sm-10">
        <%# Body content %>
        <h1><%= title %></h1>
          <% if (author_list.length) { %>
            <ul>
              <% author_list.forEach(author => { %>
                <li>
                  <a href='<%= author.url %>'> <%= author.name %> </a>
                  &lpar;<%= author.date_of_birth_formatted %> &hyphen; <%= author.date_of_death_formatted %>&rpar;
                  
                </li>
              <% }) %>
            </ul>
            <% } else { %>
             <p>There are no authors.</p>
          <% } %>
      </div>

  </div>
</div>

<%- include('./partials/footer') %>