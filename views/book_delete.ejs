<%- include('./partials/head') %>

<div class="container-fluid">
  <div class="row">
      <div class="col-sm-2">
        <%# Sidebar menu %>
        <%- include('./partials/sidebar') %>

      </div>

      <div class="col-sm-10">
        <%# Body content %>
        <h1><%= title %>: <%= book.title %></h1>
        
        <% if (book_instances.length) { %>
         <p><strong>Delete the following copies before attempting to delete this book.</strong></p>
         <div style='margin-left:20px; margin-top:20px'>
          <h4>Copies</h4>
          <dl>
            <% book_instances.forEach(instance => { %>
              <dt>
                <a href='<%= instance.url %>'><%= instance.imprint %></a>
              </dt>
            <% }) %>
          </dl>
         </div>
         <% } else { %>
          <p>Do you really want to delete this Book?</p>

          <form method='post'>
            <div class='form-group'><input type='hidden' id='bookid' class='form-control' 
              name='bookid' value='<%= book._id %>'>
            </div>
            <button class='btn btn-primary' type='submit'>Delete</button>
          </form>
        <% } %>
      </div>

  </div>
</div>

<%- include('./partials/footer') %>