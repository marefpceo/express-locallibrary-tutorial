<%- include('./partials/head') %>

<div class="container-fluid">
  <div class="row">
      <div class="col-sm-2">
        <%# Sidebar menu %>
        <%- include('./partials/sidebar') %>

      </div>

      <div class="col-sm-10">
        <%# Body content %>
        <h1><%= title %></h1>

        <form  method='post'>
          <div class='form-group'>
            <label for='first_name'>First Name: </label>
            <input type='text' id='first_name' class='form-control' placeholder='First name (Christian)'
              name='first_name' required value='<%= typeof author === 'undefined' ? '' : author.first_name %>'>
            <label for='family_name'>Family Name: </label>
            <input type='text' id='family_name' class='form-control' placeholder='Family name (Surname)'
              name='family_name' required value='<%= typeof author === 'undefined' ? '' : author.family_name %>'>  
          </div>

          <div class='form-group'>
            <label for='date_of_birth'>Date of birth: </label>
            <input type='date' id='date_of_birth' class='form-control' name='date_of_birth' 
              value='<%= typeof author ? '' : author.date_of_birth %>'>
            <button class='btn btn-primary' type='submit'>Submit</button>   
          </div>

          <div class='form-group'>
            <label for='date_of_death'>Date of death: </label>
            <input type='date' id='date_of_death' class='form-control' name='date_of_death' 
              value='<%= typeof author ? '' : author.date_of_death %>'>
            <button class='btn btn-primary' type='submit'>Submit</button>   
          </div>
        </form>

        <% if (typeof errors !== 'undefined') { %>
          <ul>
            <% errors.forEach(error => { %>
              <li><%= error.msg %></li>
            <% }) %>
          </ul>
        <% } %>

      </div>

  </div>
</div>

<%- include('./partials/footer') %>