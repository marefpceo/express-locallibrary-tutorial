<%- include('./partials/head') %>

<div class="container-fluid">
  <div class="row">
      <div class="col-sm-2">
        <%# Sidebar menu %>
        <%- include('./partials/sidebar') %>

      </div>

      <div class="col-sm-10">
        <%# Body content %>
        <h1><%= title %></h1>
          <% if (book_list.length) { %>
            <ul>
              <% book_list.forEach(book=> { %>
                <li>
                  <a href='<%= book.url %>'> <%= book.title %></a>
                  &lpar;<%= book.author.name %>&rpar;
                </li>
              <% }) %>
            </ul>
            <% } else { %>
             <p>There are no books.</p>
          <% } %>
      </div>

  </div>
</div>

<%- include('./partials/footer') %>