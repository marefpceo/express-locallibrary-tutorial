<%- include('./partials/head') %>

<div class="container-fluid">
  <div class="row">
      <div class="col-sm-2">
        <%# Sidebar menu %>
        <%- include('./partials/sidebar') %>

      </div>

      <div class="col-sm-10">
        <%# Body content %>
        <h1>Delete Copy: <%= bookinstance._id %></h1>

        <p><strong>Title:</strong>
          <a href='<%= bookinstance.book.url %>'><%= bookinstance.book.title %></a>
        </p>
        <p><strong>Imprint:</strong> <%= bookinstance.imprint %></p>

        <p><strong>Status:</strong>
          <% if (bookinstance.status === 'Available') { %>
           <span class='text-success'><%= bookinstance.status %></span>
           <% } else if (bookinstance.status === 'Maintenance') { %>
            <span class='text-danger'><%= bookinstance.status %></span>
            <% } else { %>
             <span class='text-warning'><%= bookinstance.status %></span>
          <% } %>
        </p>

        <% if (bookinstance.status !== 'Available') { %>
         <p><strong>Due back:</strong> <%= bookinstance.due_back %></p>
        <% } %>

        <hr>
        <p>
          <strong>Do you really want to delete this copy?</strong>
        </p>

        <form method='post'>
          <div class='form-group'>
            <input type='hidden' id='bookinstanceid' class='form-control' name='bookinstanceid' 
              value='<%= bookinstance._id %>'>
          </div>
          <button class='btn btn-primary' type='submit'>Delete</button>
         </form>
      </div>
      
  </div>
</div>

<%- include('./partials/footer') %>