<%- include('./partials/head') %>

<div class="container-fluid">
  <div class="row">
      <div class="col-sm-2">
        <%# Sidebar menu %>
        <%- include('./partials/sidebar') %>

      </div>

      <div class="col-sm-10">
        <%# Body content %>
        <h1><%= title %>: <%= genre.name %></h1>

        <% if (genre_books.length) { %>
          <p><strong>Delete the following books before attempting to delete this genre.</strong></p>
          <div style='margin-left:20px; margin-top:20px'>
            <h4>Books</h4>
            <dl>
              <% genre_books.forEach(book => { %>
                <dt>
                  <a href='<%= book.url %>'><%= book.title %></a>
                </dt>
                <dd <%= book.summary %>=></dd>
              <% }) %>
            </dl>
          </div>
          <% } else { %>
           <p>Do you really want to delete this Genre?</p>

           <form method='post'>
            <div class='form-group'>
              <input type='hidden' id='genreid' class='form-control' name='genreid' 
                value='<%= genre._id %>'>
            </div>
            <button class='btn btn-primary' type='submit'>Delete</button>
           </form>
        <% } %>
      </div>

  </div>
</div>

<%- include('./partials/footer') %>